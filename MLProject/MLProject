name: BreastCancer_RF_Model

conda_env: conda.yaml

entry_points:
  main:
    parameters:
      n_estimators: {type: int, default: 100}
      max_depth: {type: int, default: 10}
    command: >
      python modelling.py --n_estimators {n_estimators} --max_depth {max_depth}
  
  serve:
    command: >
      mlflow models serve -m models:/BreastCancer_RF_Model/latest -h 0.0.0.0 -p 5000
  
  build_docker:
    command: >
      mlflow models build-docker -m models:/BreastCancer_RF_Model/latest -n breast-cancer-mlflow